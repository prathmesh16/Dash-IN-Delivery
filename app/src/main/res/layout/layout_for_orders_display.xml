<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:paddingBottom="10dip"
    android:background="@drawable/map_background"
    >
    <TextView
        android:layout_height="25dip"
        android:layout_width="170dip"
        android:layout_marginTop="10dp"
        android:id="@+id/HoldMyFrom"
        android:layout_marginLeft="5dip"
        android:textSize="24dp"
        android:textColor="#000000"
        android:text="FROM"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:ellipsize="end"
        android:textAlignment="textStart"
        android:gravity="start" />
    <TextView
        android:layout_height="wrap_content"
        android:maxHeight="62dp"
        android:layout_width="170dip"
        android:layout_marginTop="6dip"
        android:layout_below="@id/HoldMyFrom"
        android:id="@+id/HoldFromAddress"
        android:layout_marginLeft="5dip"
        android:textSize="13dip"
        android:textColor="#444444"
        android:text="Address line\nAddress line\nAddress line\nAddress line"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:ellipsize="end"
        android:textAlignment="textStart"
        android:gravity="start" />
    <TextView
        android:layout_height="25dip"
        android:layout_width="180dip"
        android:layout_toRightOf="@+id/HoldMyFrom"
        android:layout_marginTop="10dp"
        android:id="@+id/HoldMyTo"
        android:layout_marginLeft="0dip"
        android:textSize="24dp"
        android:textColor="#000000"
        android:text="TO"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:ellipsize="end"
        android:textAlignment="textStart"
        android:gravity="start" />
    <View
        android:layout_width="1dp"
        android:layout_height="fill_parent"
        android:minHeight="41dip"
        android:background="#dddddd"
        android:layout_toRightOf="@id/HoldMyFrom"
        android:layout_marginTop="40dp"
        android:layout_above="@+id/ruler"
        />
    <TextView
        android:layout_height="wrap_content"
        android:maxHeight="62dp"
        android:layout_width="180dip"
        android:layout_marginTop="6dip"
        android:layout_below="@id/HoldMyTo"
        android:id="@+id/HoldToAddress"
        android:layout_toRightOf="@+id/HoldFromAddress"
        android:layout_marginLeft="0dip"
        android:textSize="13dip"
        android:textColor="#444444"
        android:text="Address line\nAddress line\nAddress line\nAddress line"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"

        android:ellipsize="end"
        android:textAlignment="textStart"
        android:gravity="start" />
    <View
        android:layout_width="335dip"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:layout_height="2dp"
        android:background="#dddddd"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/HoldFromAddress"
        android:layout_centerHorizontal="true"
        android:id="@+id/ruler"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ruler"
        android:layout_marginTop="8dip"
        android:layout_marginLeft="12dip"
        android:text="ORDER NUMBER"
        android:textSize="15dip"
        android:textColor="#888888"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="25dip"
        android:layout_below="@+id/ruler"
        android:layout_marginTop="24dip"
        android:layout_marginLeft="12dip"
        android:id="@+id/HoldMyOrder"
        android:text="ORDER NUMBER"
        android:textSize="17dip"
        android:textColor="#000000"
        android:ellipsize="marquee"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/HoldMyOrder"
        android:layout_marginTop="8dip"
        android:layout_marginLeft="12dip"
        android:text="BOUGHT ON"
        android:textSize="15dip"
        android:textColor="#888888"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="25dip"
        android:layout_below="@+id/HoldMyOrder"
        android:layout_marginTop="24dip"
        android:layout_marginLeft="12dip"
        android:id="@+id/HoldMyDate"
        android:text="Date and time"
        android:textAllCaps="true"
        android:textSize="17dip"
        android:textColor="#000000"
        android:ellipsize="marquee"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/HoldMyOrder"
        android:layout_marginTop="8dip"
        android:layout_marginLeft="182dip"
        android:text="DELIVER BY"
        android:textSize="15dip"
        android:textColor="#888888"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="25dip"
        android:layout_below="@+id/HoldMyOrder"
        android:layout_marginTop="24dip"
        android:layout_marginLeft="182dip"
        android:id="@+id/HoldMyLimit"
        android:text="+ 30 mins"
        android:textAllCaps="true"
        android:textSize="17dip"
        android:textColor="#000000"
        android:ellipsize="marquee"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/HoldMyDate"
        android:layout_marginTop="8dip"
        android:layout_marginLeft="12dip"
        android:text="STATUS"
        android:textSize="15dip"
        android:textColor="#888888"
        />
    <TextView
        android:layout_width="120dip"
        android:layout_height="25dip"
        android:layout_below="@+id/HoldMyDate"
        android:layout_marginTop="24dip"
        android:layout_marginLeft="12dip"
        android:id="@+id/HoldMyStatus"
        android:text="(PAID/UNPAID)"
        android:textSize="17dip"
        android:textColor="#000000"
        android:ellipsize="marquee"
        />
    <Button
        android:layout_width="70dp"
        android:layout_height="40dip"
        android:layout_below="@id/HoldMyLimit"
        android:layout_marginLeft="182dp"
        android:layout_marginTop="12dp"
        android:id="@+id/callBusiness"
        android:text="Call\nHotel"
        android:textSize="11dp"
        android:padding="5dp"
        />
    <Button
        android:layout_width="70dp"
        android:layout_height="40dip"
        android:layout_below="@id/HoldMyLimit"
        android:layout_toRightOf="@id/callBusiness"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="12dp"
        android:id="@+id/callCustomer"
        android:text="Call Customer"
        android:textSize="11dp"
        android:padding="5dp"
        />
</RelativeLayout>